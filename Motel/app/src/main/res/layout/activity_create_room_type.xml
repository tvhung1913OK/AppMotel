<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateRoomTypeActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center|start">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_12sdp"
                app:srcCompat="@drawable/back"
                android:contentDescription="missing load image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TẠO LOẠI PHÒNG"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_15sdp"
        tools:context=".MemberActivity">

        <LinearLayout
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:text="Tên loại phòng :"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center|start"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:text="Giá phòng :"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center|start"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:text="Giá điện :"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center|start"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:text="Giá nước :"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center|start"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:text="Diện tích :"
                android:gravity="center|start"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edten"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_26sdp"
                android:paddingStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:hint="Nhập tên loại phòng  "
                android:textSize="@dimen/_10ssp"
                android:background="@drawable/border_edit_orange" />
            <EditText
                android:id="@+id/edgiaphong"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_26sdp"
                android:paddingStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:hint="Nhập giá phòng "
                android:textSize="@dimen/_10ssp"
                android:inputType="number"
                android:background="@drawable/border_edit_orange" />
            <EditText
                android:id="@+id/eddien"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_26sdp"
                android:paddingStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:hint="Nhập giá điện "
                android:inputType="number"
                android:textSize="@dimen/_10ssp"
                android:background="@drawable/border_edit_orange" />
            <EditText
                android:id="@+id/ednuoc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_26sdp"
                android:paddingStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:inputType="number"
                android:hint="Nhập giá nước "
                android:textSize="@dimen/_10ssp"
                android:background="@drawable/border_edit_orange" />
            <EditText
                android:id="@+id/edArea"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_26sdp"
                android:paddingStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:inputType="number"
                android:hint="Nhập diện tích "
                android:textSize="@dimen/_10ssp"
                android:background="@drawable/border_edit_orange" />


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/border_gray"
        android:orientation="vertical"
        android:padding="@dimen/_4sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiện ích :"
            android:gravity="center|start"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:layout_marginBottom="@dimen/_10sdp"/>
        />

        <GridLayout
            android:layout_width="@dimen/_276sdp"
            android:layout_height="@dimen/_141sdp"
            android:columnCount="4"
            android:rowCount="6"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgAlarm"
                android:layout_width="@dimen/_69sdp"
                android:layout_height="39dp"
                app:srcCompat="@drawable/alarm" />
            <TextView
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_12sdp"
                android:gravity="center"
                android:text="giờ giấc tự do"
                android:textSize="@dimen/_7ssp" />
            <ImageView
                android:id="@+id/imgCCTV"
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_34sdp"
                app:srcCompat="@drawable/cctv_camera" />
            <TextView
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_12sdp"
                android:gravity="center"
                android:text="có cctv"
                android:textSize="@dimen/_7ssp" />
            <ImageView
                android:id="@+id/imgBed"
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_34sdp"
                app:srcCompat="@drawable/bed" />
            <TextView
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_12sdp"
                android:gravity="center"
                android:text="có giường ngủ"
                android:textSize="@dimen/_7ssp" />

            <ImageView
                android:id="@+id/imgAirConditioner"
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_34sdp"
                app:srcCompat="@drawable/air_conditioner" />

            <TextView
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_12sdp"
                android:text="có điều hòa"
                android:gravity="center"
                android:textSize="@dimen/_7ssp" />

            <ImageView
                android:id="@+id/imgFan"
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_34sdp"
                app:srcCompat="@drawable/fan" />

            <TextView
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_12sdp"
                android:gravity="center"
                android:text="có quạt"
                android:textSize="@dimen/_7ssp" />
            <ImageView
                android:id="@+id/imgFidge"
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_34sdp"
                app:srcCompat="@drawable/fridge" />

            <TextView
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_12sdp"
                android:gravity="center"
                android:text="có tủ lạnh"
                android:textSize="@dimen/_7ssp" />
            <ImageView
                android:id="@+id/imgMotorcycle"
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_34sdp"
                app:srcCompat="@drawable/motorcycle" />

            <TextView
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_12sdp"
                android:gravity="center"
                android:text="có chỗ để xe"
                android:textSize="@dimen/_7ssp" />

            <ImageView
                android:id="@+id/imgCooking"
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_34sdp"
                app:srcCompat="@drawable/cooking" />

            <TextView
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_12sdp"
                android:gravity="center"
                android:text="được nấu ăn"
                android:textSize="@dimen/_7ssp" />

            <ImageView
                android:id="@+id/imgWashingMachine"
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_34sdp"
                app:srcCompat="@drawable/washing_machine" />

            <TextView
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_12sdp"
                android:gravity="center"
                android:text="có máy giặt"
                android:textSize="@dimen/_7ssp" />
            <ImageView
                android:id="@+id/imgMoneyBag"
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_34sdp"
                app:srcCompat="@drawable/money_bag" />

            <TextView
                android:layout_width="@dimen/_69sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="cần đặt cọc"
                android:textSize="@dimen/_7ssp" />

            <ImageView
                android:id="@+id/imgTelevision"
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_34sdp"
                app:srcCompat="@drawable/television" />

            <TextView
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_12sdp"
                android:gravity="center"
                android:text="có tivi"
                android:textSize="@dimen/_7ssp" />

            <ImageView
                android:id="@+id/imgWifi"
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_34sdp"
                app:srcCompat="@drawable/wifi" />
            <TextView
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_12sdp"
                android:gravity="center"
                android:text="có wifi"
                android:textSize="@dimen/_7ssp" />
        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSave"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/btn_orange"

            android:text="LƯU"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabIndicatorColor="@color/black"
        app:tabSelectedTextColor="@color/black"
        app:tabTextAppearance="@style/Theme.TabLayout"
        app:tabTextColor="@color/black" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>