<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="roomType"
            type="com.example.duan1.model.RoomType" />
        <variable
            name="room"
            type="com.example.duan1.model.Room" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".AddAccountActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginRight="15dp"
                    app:srcCompat="@drawable/back"
                    android:contentDescription="missing load image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Thêm Tài Khoản"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <FrameLayout

            android:id="@+id/constraintLayout"
            android:layout_width="0dp"

            android:layout_height="0dp"


            app:layout_constraintBottom_toTopOf="@+id/btnXn"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/orange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2">

            <LinearLayout
                android:layout_marginTop="@dimen/_120sdp"
                android:layout_width="match_parent"
                android:orientation="vertical"

                android:background="@drawable/white_background"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"

                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="@dimen/_40ssp"
                        android:layout_height="50dp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight=".25"
                        android:gravity="center"

                        android:text="Tài Khoản"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtuser"

                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_weight=".75"

                        android:background="@drawable/rounded_edittext"
                        android:hint="Nhập tên tài khoản"
                        android:padding="10dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="@dimen/_40ssp"
                        android:layout_height="50dp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight=".25"
                        android:gravity="center"
                        android:text="Mật khẩu"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtPass"

                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="50dp"

                        android:layout_gravity="center"
                        android:layout_weight=".75"
                        android:background="@drawable/rounded_edittext"

                        android:hint="Nhập mật khẩu"
                        android:inputType="textPassword"
                        android:padding="10dp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="@dimen/_40ssp"
                        android:layout_height="50dp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight=".25"
                        android:gravity="center"
                        android:text="Họ và tên"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtName"

                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_weight=".75"


                        android:background="@drawable/rounded_edittext"
                        android:hint="Nhập họ và tên"
                        android:padding="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    android:padding="10dp"

                    android:weightSum="1">

                    <TextView
                        android:layout_width="@dimen/_40ssp"
                        android:layout_height="50dp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight=".25"
                        android:gravity="center"
                        android:text="Số điện thoại"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtPhone"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_weight=".75"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Nhập số điện thoại"
                        android:inputType="phone"
                        android:padding="10dp" />

                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/frame1"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="@dimen/_120sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:background="@drawable/purple_background"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/editImage"
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="@dimen/_110sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/user"
                        app:civ_border_color="@color/white"
                        app:civ_circle_background_color="@color/white" />


                </LinearLayout>
            </FrameLayout>


        </FrameLayout>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_grey"
            android:fontFamily="sans-serif"
            android:text="Hủy"
            android:textColor="@color/gray"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnXn"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            app:layout_constraintVertical_bias="1.0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnXn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_orange"
            android:fontFamily="sans-serif"
            android:text="Lưu"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnExit"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>